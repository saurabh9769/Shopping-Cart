<div class="shopper-informations">
	<div class="row">
		<div class="container">
			<div class="bill-to"><p>My Orders</p></div>
				<% @orders.each do |order| %>
					<% @quant ||= [] %>
			  	<% products = order.products %>
			  	<% if products.present? %>
						<table class="table table-condensed table-striped table-hover">
							<thead>
								<tr class="cart_menu">
									<td class="image">Order Id</td>
									<td class="image">Items</td>
									<td class="description">Product Description</td>
									<td class="price">Price</td>
									<td class="quantity">Quantity</td>
									<td class="total">Total</td>
								</tr>
							</thead>
							<% products.each do |prod| %>
								<% order.order_details.each{|quantity| @quant = quantity.quantity} %>
								<tbody>
									<tr>
										<td style="width: 100px;">
											<p><%= order.id %></p>
										</td>
										<td style="width: 250px;">
											<% if prod.product_images.length > 0 %>
			  								<%= image_tag prod.product_images[0].image.url , style: " width: 110px; height: 110px;" %>
											<% end %>
										</td>
										<td class="cart_description" style="width: 250px;">
											<h4><%= link_to prod.name %></h4>
											<p>Web ID: 1089772</p>
										</td>
										<td class="cart_price" style="width: 150px">
											<p><%= prod.price %></p>
										</td>
										<td class="cart_quantity" style="width: 150px">
											<% order.order_details.each{|quantity| @quantityvalue = quantity.quantity} %>
											<input class="cart_quantity_input" type="text" name="quantity" value="<%= @quantityvalue %>" autocomplete="off" size="2">
											</div>
										<td class="cart_total" style="width: 120px">
											<p class="cart_total_price"><%= prod.price * @quantityvalue %></p>
										</td>
										<td>
											<p class="cart_price"><%= link_to "Track Package", orders_track_package_orders_path(order_id: order.id), style: "width: 150px" , class:"btn btn-primary" %></p>
										</td>
									</tr>
								</tbody>
							<% end %>
						</table>
					<% end %>
				<% end %>
	    </div>
		</div>
	</div>
</div>