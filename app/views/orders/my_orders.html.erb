<div class="shopper-informations">
	<div class="row">
		<div class="container">
			<div class="bill-to"><p>My Orders</p></div>
				<% @orders.each do |order| %>
					<table class="table table-condensed table-striped table-hover">
						<thead>
							<tr class="cart_menu">
								<td class="image">Items</td>
								<td class="description"></td>
								<td class="price">Price</td>
								<td class="quantity">Quantity</td>
								<td class="total">Total</td>
							</tr>
						</thead>
						<tbody>
							<% total ||= [] %>
							<tr>
						  	<% product = Product.find(order.order_detail.product_id) if order.order_detail.present? %>
								<td style="width: 250px;">
									<% if product.present? %>
										<% if product.product_images.length > 0 %>
			  							<%= image_tag product.product_images[0].image.url , style: " width: 110px; height: 110px;" %>
										<% end %>
									<% end %>
								</td>
								<td class="cart_description">
									<h4><%= link_to product.name %></h4>
									<p>Web ID: 1089772</p>
								</td>
								<td class="cart_price">
									<p><%= product.price %></p>
								</td>
								<td class="cart_quantity">
									<input class="cart_quantity_input" type="text" name="quantity" value="<%= order.order_detail.quantity %>" autocomplete="off" size="2">
									</div>
								<td class="cart_total">
									<p class="cart_total_price"><%= product.price %></p>
								</td>
							</tr>
						</tbody>
					</table>
				<% end %>
	    </div>
		</div>
	</div>
</div>