<div class="shopper-informations wish_list_info">
	<div class="row">
		<div class="container">
			<div class="bill-to"><p>WishList</p></div>
				<% wishlist = current_user.products %>
				<% wishlist.each do |product| %>
			  	<% if product.present? %>
						<table class="table table-condensed table-striped table-hover">
							<thead>
								<tr class="cart_menu">
									<td class="image">Product Id</td>
									<td class="image">Items</td>
									<td class="description">Product Description</td>
									<td class="price">Price</td>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td style="width: 100px;">
										<p><%= product.id %></p>
									</td>
									<td style="width: 250px;">
										<% if product.product_images.length > 0 %>
		  								<%= image_tag product.product_images[0].image.url , style: " width: 110px; height: 110px;" %>
										<% end %>
									</td>
									<td class="cart_description" style="width: 250px;">
										<h4><%= link_to product.name %></h4>
										<p>Web ID: 1089772</p>
									</td>
									<td class="cart_price" style="width: 150px">
										<p><%= product.price %></p>
									</td>
									<td class="cart_total" style="width: 120px">
										<p class="cart_total_price"><%= link_to "Remove from Wishlist", user_wish_list_remove_from_wish_list_path(product_id: product.id), class: "btn btn-default add-to-cart", remote: :true, method: :delete %></p>
										<p class="cart_total_price"><%= link_to (raw('<i class="fa fa-shopping-cart"></i>Add to cart')), user_wish_list_add_to_cart_path(product_id: product.id , product_quantity: product.quantity) , class: "btn btn-default add-to-cart" , remote: :true %></p>
									</td>
								</tr>
							</tbody>
						</table>
					<% end %>
				<% end %>
	    </div>
		</div>
	</div>
</div>