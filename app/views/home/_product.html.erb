<div class="testproduct" data-remote = "true">
	<% @products.each do |product| %>
		<% if product.status == ('active') %>
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">
						<div class="productinfo text-center">
							<% if product.product_images.length > 0 %>
								<%= image_tag "#{product.product_images[0].image.url}" , style: "height: 185px ; width: auto; margin: auto;" %>
							<% end %>
							<h2><%= product.price %></h2>
							<p><%= product.name %></p>
							<%= link_to (raw('<i class="fa fa-shopping-cart"></i>Add to cart')), home_add_to_cart_path(product_id: product.id, product_quantity: product.quantity) , class: "btn btn-default add-to-cart" , remote: true %>
						</div>
						<div class="product-overlay">
							<div class="overlay-content">
								<h2><%= product.price %></h2>
								<p><%= link_to product.name, product %></p>
								<%= link_to (raw('<i class="fa fa-shopping-cart"></i>Add to cart')), home_add_to_cart_path(product_id: product.id , product_quantity: product.quantity) , class: "btn btn-default add-to-cart" , remote: true %>
							</div>
						</div>
					</div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><%= link_to (raw('<i class="fa fa-plus-square"></i>Add to wishlist')), user_wish_list_show_wish_list_path(product_id: product.id), method: :post %></li>
						</ul>
					</div>
				</div>
			</div>
		<% end %>
	<% end %>
	<div style="text-align: center ">
		<%= paginate @products %>
	</div>
</div>