  				<div class="status alert alert-success" style="display: none"></div>
		    	<%= form_for contact_us_contact_us_path, id: "main-contact-form", class: "contact-form row", name: "contact-form", method: "post" do %>
            <div class="form-group col-md-6">
              <%= text_field_tag "name", params[:name], placeholder: "Name", class: "form-control", required: "required" %>
            </div>
            <div class="form-group col-md-6">
          	  <%= text_field_tag "email", params[:email], placeholder: "Email", class: "form-control", required: "required" %>
            </div>
            <div class="form-group col-md-12">
              <%= text_field_tag "subject", params[:subject], placeholder: "Subject", class: "form-control", required: "required" %>
            </div>
            <div class="form-group col-md-12">
              <%= cktext_area "message", params[:message], cols: 40, ckeditor: { uiColor: '#AADC6E', toolbar: 'mini' } %>
            </div>
            <div class="form-group col-md-12">
              <%= submit_tag "Submit", class: "btn btn-primary pull-right" %>
            </div>
        	<% end %>
